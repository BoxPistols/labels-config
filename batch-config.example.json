{
  "$schema": "./batch-config.schema.json",
  "version": "1.0.0",
  "description": "Batch label configuration for multiple repositories",
  "defaults": {
    "template": "prod-ja",
    "mode": "append",
    "parallel": 3
  },
  "targets": [
    {
      "organization": "your-org",
      "filter": {
        "visibility": "public",
        "language": "TypeScript",
        "archived": false
      },
      "template": "react",
      "mode": "append"
    },
    {
      "repositories": [
        "your-org/project-a",
        "your-org/project-b"
      ],
      "template": "prod-ja",
      "mode": "replace"
    },
    {
      "user": "your-username",
      "filter": {
        "visibility": "private"
      },
      "file": "./custom-labels.json"
    }
  ]
}
