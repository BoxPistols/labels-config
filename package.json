{
  "name": "labels-config-boxpistols",
  "version": "0.1.0",
  "description": "Comprehensive label management system for GitHub repositories and development teams",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "browser": "dist/index.umd.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.esm.js",
      "require": "./dist/config/index.js"
    },
    "./github": {
      "types": "./dist/github/index.d.ts",
      "import": "./dist/github/index.esm.js",
      "require": "./dist/github/index.js"
    }
  },
  "bin": {
    "labels-config": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates",
    "docs"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts src/config/index.ts src/github/index.ts src/cli.ts --format cjs,esm --dts --shims",
    "build:umd": "tsup src/index.ts --format iife --dts --globalName LabelsConfig --outDir dist",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --fix",
    "cli": "tsx src/cli.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "labels",
    "github",
    "issue-tracking",
    "config",
    "management",
    "schema",
    "validation"
  ],
  "author": "BoxPistols",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BoxPistols/labels-config.git"
  },
  "bugs": {
    "url": "https://github.com/BoxPistols/labels-config/issues"
  },
  "homepage": "https://github.com/BoxPistols/labels-config#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "octokit": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
